<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @theme.object %>
    <h1>Edit <%= @theme.title%></h1>
    <%= link_to "Delete", :action => :delete, :id => @theme.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @theme.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Title: </td>
              <td class="itemValue"><input type="text" name="theme[title]" value="<%= @theme.title %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Description: </td>
              <td class="itemValue"><input type="text" name="theme[description]" value="<%= @theme.description %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Category: </td>
              <td class="itemValue"><input type="text" name="theme[category]" value="<%= @theme.category %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Time control: </td>
              <td class="itemValue"><input type="text" name="theme[time_control]" value="<%= @theme.time_control %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
