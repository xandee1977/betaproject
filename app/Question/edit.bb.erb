<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @question.object %>
    <h1>Edit <%= @question.subject_id%></h1>
    <%= link_to "Delete", :action => :delete, :id => @question.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @question.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Subject: </td>
              <td class="itemValue"><input type="text" name="question[subject_id]" value="<%= @question.subject_id %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Theme: </td>
              <td class="itemValue"><input type="text" name="question[theme_id]" value="<%= @question.theme_id %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Sentence: </td>
              <td class="itemValue"><input type="text" name="question[sentence]" value="<%= @question.sentence %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Option one: </td>
              <td class="itemValue"><input type="text" name="question[option_one]" value="<%= @question.option_one %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Option two: </td>
              <td class="itemValue"><input type="text" name="question[option_two]" value="<%= @question.option_two %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Option three: </td>
              <td class="itemValue"><input type="text" name="question[option_three]" value="<%= @question.option_three %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Option four: </td>
              <td class="itemValue"><input type="text" name="question[option_four]" value="<%= @question.option_four %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Option five: </td>
              <td class="itemValue"><input type="text" name="question[option_five]" value="<%= @question.option_five %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Answer: </td>
              <td class="itemValue"><input type="text" name="question[answer]" value="<%= @question.answer %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Explanation: </td>
              <td class="itemValue"><input type="text" name="question[explanation]" value="<%= @question.explanation %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Time control: </td>
              <td class="itemValue"><input type="text" name="question[time_control]" value="<%= @question.time_control %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
