<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New Question</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @question.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Subject: </td>
                <td class="itemValue"><input type="text" name="question[subject_id]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Theme: </td>
                <td class="itemValue"><input type="text" name="question[theme_id]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Sentence: </td>
                <td class="itemValue"><input type="text" name="question[sentence]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Option one: </td>
                <td class="itemValue"><input type="text" name="question[option_one]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Option two: </td>
                <td class="itemValue"><input type="text" name="question[option_two]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Option three: </td>
                <td class="itemValue"><input type="text" name="question[option_three]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Option four: </td>
                <td class="itemValue"><input type="text" name="question[option_four]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Option five: </td>
                <td class="itemValue"><input type="text" name="question[option_five]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Answer: </td>
                <td class="itemValue"><input type="text" name="question[answer]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Explanation: </td>
                <td class="itemValue"><input type="text" name="question[explanation]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Time control: </td>
                <td class="itemValue"><input type="text" name="question[time_control]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
