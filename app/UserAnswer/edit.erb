<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @useranswer.user_id %></h1>
    <a href="<%= url_for :action => :show, :id => @useranswer.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @useranswer.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @useranswer.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="useranswer[user_id]" class="fieldLabel">User</label>
            <input type="text" id="useranswer[user_id]" name="useranswer[user_id]" value="<%= @useranswer.user_id %>" <%= placeholder( "User" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="useranswer[answer]" class="fieldLabel">Answer</label>
            <input type="text" id="useranswer[answer]" name="useranswer[answer]" value="<%= @useranswer.answer %>" <%= placeholder( "Answer" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="useranswer[time_control]" class="fieldLabel">Time control</label>
            <input type="text" id="useranswer[time_control]" name="useranswer[time_control]" value="<%= @useranswer.time_control %>" <%= placeholder( "Time control" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
