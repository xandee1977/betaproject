<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @useranswer.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @useranswer.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="useranswer[user_id]" class="fieldLabel">User</label>
            <input type="text" id="useranswer[user_id]" name="useranswer[user_id]" <%= placeholder("User") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="useranswer[answer]" class="fieldLabel">Answer</label>
            <input type="text" id="useranswer[answer]" name="useranswer[answer]" <%= placeholder("Answer") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="useranswer[time_control]" class="fieldLabel">Time control</label>
            <input type="text" id="useranswer[time_control]" name="useranswer[time_control]" <%= placeholder("Time control") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
