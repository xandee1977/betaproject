<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New Subject</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @subject.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Theme: </td>
                <td class="itemValue"><input type="text" name="subject[theme_id]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Title: </td>
                <td class="itemValue"><input type="text" name="subject[title]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Description: </td>
                <td class="itemValue"><input type="text" name="subject[description]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Time control: </td>
                <td class="itemValue"><input type="text" name="subject[time_control]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
