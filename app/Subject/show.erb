<div data-role="page" data-add-back-btn="false">

  <div data-role="header" data-position="inline">
    <h1><%= @subject.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="arrow-l" data-direction="reverse">
      Back
    </a>
    <a href="<%= url_for :action => :edit, :id => @subject.object %>" class="ui-btn-right" data-icon="star">
      Edit
    </a>
  </div>

  <div data-role="content">
    <ul data-role="listview">
      
          <li>
            <div class="itemLabel">Theme</div>
            <div class="itemValue"><%= Theme.find(@subject.theme_id).title %></div>
          </li>
      
          <li>
            <div class="itemLabel">Title</div>
            <div class="itemValue"><%= @subject.title %></div>
          </li>
      
          <li>
            <div class="itemLabel">Description</div>
            <div class="itemValue"><%= @subject.description %></div>
          </li>
      
          <li>
            <div class="itemLabel">TimeControl</div>
            <div class="itemValue"><%= @subject.time_control %></div>
          </li>
      
    </ul>
  </div>

</div>
