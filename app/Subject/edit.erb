<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @subject.theme_id %></h1>
    <a href="<%= url_for :action => :show, :id => @subject.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @subject.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @subject.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="subject[theme_id]" class="fieldLabel">Theme</label>
            <input type="text" id="subject[theme_id]" name="subject[theme_id]" value="<%= @subject.theme_id %>" <%= placeholder( "Theme" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="subject[title]" class="fieldLabel">Title</label>
            <input type="text" id="subject[title]" name="subject[title]" value="<%= @subject.title %>" <%= placeholder( "Title" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="subject[description]" class="fieldLabel">Description</label>
            <input type="text" id="subject[description]" name="subject[description]" value="<%= @subject.description %>" <%= placeholder( "Description" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="subject[time_control]" class="fieldLabel">Time control</label>
            <input type="text" id="subject[time_control]" name="subject[time_control]" value="<%= @subject.time_control %>" <%= placeholder( "Time control" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
