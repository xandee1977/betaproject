<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @profile.object %>
    <h1>Edit <%= @profile.user_id%></h1>
    <%= link_to "Delete", :action => :delete, :id => @profile.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @profile.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">User: </td>
              <td class="itemValue"><input type="text" name="profile[user_id]" value="<%= @profile.user_id %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Firstname: </td>
              <td class="itemValue"><input type="text" name="profile[firstname]" value="<%= @profile.firstname %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Lastname: </td>
              <td class="itemValue"><input type="text" name="profile[lastname]" value="<%= @profile.lastname %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Biography: </td>
              <td class="itemValue"><input type="text" name="profile[biography]" value="<%= @profile.biography %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Avatar: </td>
              <td class="itemValue"><input type="text" name="profile[avatar]" value="<%= @profile.avatar %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Time control: </td>
              <td class="itemValue"><input type="text" name="profile[time_control]" value="<%= @profile.time_control %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
