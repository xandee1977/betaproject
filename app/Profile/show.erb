<div data-role="page" data-add-back-btn="false">

  <div data-role="header" data-position="inline">
    <h1><%= @profile.user_id %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="arrow-l" data-direction="reverse">
      Back
    </a>
    <a href="<%= url_for :action => :edit, :id => @profile.object %>" class="ui-btn-right" data-icon="star">
      Edit
    </a>
  </div>

  <div data-role="content">
    <ul data-role="listview">
      
          <li>
            <div class="itemLabel">UserId</div>
            <div class="itemValue"><%= @profile.user_id %></div>
          </li>
      
          <li>
            <div class="itemLabel">Firstname</div>
            <div class="itemValue"><%= @profile.firstname %></div>
          </li>
      
          <li>
            <div class="itemLabel">Lastname</div>
            <div class="itemValue"><%= @profile.lastname %></div>
          </li>
      
          <li>
            <div class="itemLabel">Biography</div>
            <div class="itemValue"><%= @profile.biography %></div>
          </li>
      
          <li>
            <div class="itemLabel">Avatar</div>
            <div class="itemValue"><%= @profile.avatar %></div>
          </li>
      
          <li>
            <div class="itemLabel">TimeControl</div>
            <div class="itemValue"><%= @profile.time_control %></div>
          </li>
      
    </ul>
  </div>

</div>
