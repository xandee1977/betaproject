<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New Profile</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @profile.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">User: </td>
                <td class="itemValue"><input type="text" name="profile[user_id]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Firstname: </td>
                <td class="itemValue"><input type="text" name="profile[firstname]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Lastname: </td>
                <td class="itemValue"><input type="text" name="profile[lastname]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Biography: </td>
                <td class="itemValue"><input type="text" name="profile[biography]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Avatar: </td>
                <td class="itemValue"><input type="text" name="profile[avatar]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Time control: </td>
                <td class="itemValue"><input type="text" name="profile[time_control]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
