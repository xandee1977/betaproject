<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @userscore.user_id %></h1>
    <a href="<%= url_for :action => :show, :id => @userscore.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @userscore.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @userscore.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="userscore[user_id]" class="fieldLabel">User</label>
            <input type="text" id="userscore[user_id]" name="userscore[user_id]" value="<%= @userscore.user_id %>" <%= placeholder( "User" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="userscore[score]" class="fieldLabel">Score</label>
            <input type="text" id="userscore[score]" name="userscore[score]" value="<%= @userscore.score %>" <%= placeholder( "Score" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="userscore[time_control]" class="fieldLabel">Time control</label>
            <input type="text" id="userscore[time_control]" name="userscore[time_control]" value="<%= @userscore.time_control %>" <%= placeholder( "Time control" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
