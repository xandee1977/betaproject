<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @userscore.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @userscore.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="userscore[user_id]" class="fieldLabel">User</label>
            <input type="text" id="userscore[user_id]" name="userscore[user_id]" <%= placeholder("User") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="userscore[score]" class="fieldLabel">Score</label>
            <input type="text" id="userscore[score]" name="userscore[score]" <%= placeholder("Score") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="userscore[time_control]" class="fieldLabel">Time control</label>
            <input type="text" id="userscore[time_control]" name="userscore[time_control]" <%= placeholder("Time control") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
