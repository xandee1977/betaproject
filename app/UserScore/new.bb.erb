<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New UserScore</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @userscore.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">User: </td>
                <td class="itemValue"><input type="text" name="userscore[user_id]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Score: </td>
                <td class="itemValue"><input type="text" name="userscore[score]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Time control: </td>
                <td class="itemValue"><input type="text" name="userscore[time_control]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
