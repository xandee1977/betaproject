<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @userscore.object %>
    <h1>Edit <%= @userscore.user_id%></h1>
    <%= link_to "Delete", :action => :delete, :id => @userscore.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @userscore.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">User: </td>
              <td class="itemValue"><input type="text" name="userscore[user_id]" value="<%= @userscore.user_id %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Score: </td>
              <td class="itemValue"><input type="text" name="userscore[score]" value="<%= @userscore.score %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Time control: </td>
              <td class="itemValue"><input type="text" name="userscore[time_control]" value="<%= @userscore.time_control %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
